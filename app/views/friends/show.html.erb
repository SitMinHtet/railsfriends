<p id="notice"><%= notice %></p>

<div class="jumbotron" >
  <h1 class="display-4">Hello! <%= @friend.first_name %></h1>
  <p>
    <strong>First name:</strong>
    <%= @friend.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= @friend.last_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @friend.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @friend.phone %>
  </p>

  <p>
    <strong>Twitter:</strong>
    <%= @friend.twitter %>
  </p>

  <p class="lead">
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" , style:"color:white" %><br>
    <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }%><br>
    <%= link_to 'Back', friends_path, class:"btn btn-secondary" , style:"color:white" %>
  </p>
</div>




